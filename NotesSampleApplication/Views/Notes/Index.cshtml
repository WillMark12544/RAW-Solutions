@model IEnumerable<NotesSampleApplication.Models.Note>

@{
    ViewData["Title"] = "My Notes";
}

<h1>My Notes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Note</a>
</p>

<!-- Logout button -->
<form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
    <button type="submit" class="btn btn-danger">Logout</button>
</form>

<form asp-action="Search" method="get" class="mb-3">
    <input type="text" name="searchTerm" placeholder="Search notes..." class="form-control d-inline w-auto" />
    <button type="submit" class="btn btn-secondary">Search</button>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                <td>@Html.Raw(note.Title)</td>
                <td>@Html.Raw(note.Content)</td>
                <td>@note.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
